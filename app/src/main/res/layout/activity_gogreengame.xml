<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mountain"
    tools:context=".activityclass.gogreengame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Go - Green"
            android:textSize="25sp"
            android:textColor="#026056"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/mcq_queslayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:background="@drawable/navyblue"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/questcardview"
                app:cardCornerRadius="15dp"
                android:layout_width="350dp"
                android:layout_height="90dp"
                android:layout_below="@+id/quiz_time"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                app:cardElevation="6dp"
                android:outlineAmbientShadowColor="@color/white">

                <TextView
                    android:id="@+id/questions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/quiz_arena"
                    android:layout_gravity="center"
                    android:fontFamily="@font/oxygen"
                    android:gravity="center"
                    android:text="QUESTIONS"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/white"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:visibility="gone" />
            </androidx.cardview.widget.CardView>

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardoA"
                    app:cardCornerRadius="30dp"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/quiz_time"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    app:cardElevation="6dp"
                    android:outlineAmbientShadowColor="@color/white">

                    <TextView
                        android:id="@+id/btnA"
                        android:layout_below="@+id/quiz_arena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/oxygen"
                        android:textColorHighlight="@color/white"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardoB"
                    app:cardCornerRadius="30dp"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/quiz_time"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    app:cardElevation="6dp"
                    android:outlineAmbientShadowColor="@color/white">

                    <TextView
                        android:id="@+id/btnB"
                        android:layout_below="@+id/quiz_arena"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:textColorHighlight="@color/white"
                        android:gravity="center"
                        android:fontFamily="@font/oxygen"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        />
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/mcq_infotag"
            android:layout_below="@+id/mcq_queslayout"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            android:layout_width="300dp"
            app:cardCornerRadius="20dp"
            android:visibility="gone"
            android:layout_height="250dp">

            <LinearLayout
                android:id="@+id/imageslayout"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/images"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:paddingStart="10dp"/>

                <TextView
                    android:id="@+id/imagetxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/oxygen"
                    android:textColor="@color/black"/>
            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/cycling"
            android:layout_marginTop="525dp"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/nextbtn"
            android:layout_alignParentBottom="true"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="next"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="22sp"
            android:textStyle="bold"
            android:contextClickable="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"
            android:background="@drawable/gamenextbg"
            android:shadowColor="#E6EBED"
            android:shadowRadius="3" />

        <RelativeLayout
            android:id="@+id/mcq_result"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                app:cardCornerRadius="20dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/navyblue"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Your Contribution Towards Environment: 70%"
                            android:textSize="20sp"
                            android:id="@+id/result"
                            android:fontFamily="@font/poppins_semibold"
                            android:textColor="#109A4A"
                            android:gravity="center"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Restart"
                        android:textSize="18sp"
                        android:id="@+id/restart"
                        android:layout_margin="30dp"
                        android:layout_weight="1"
                        android:background="@drawable/navyblue"
                        android:fontFamily="@font/poppins_semibold"
                        android:textColor="#000000"
                        android:gravity="center"/>




                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/hotairbaloon"/>


            </LinearLayout>



        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>